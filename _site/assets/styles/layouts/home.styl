section
	text-align center
	padding-top 80px
	padding-bottom 80px

	h3
		margin-bottom 20px
		font-size 2em
		font-weight 600

		&:after
			content ''
			display block
			width 60px
			height 3px
			margin 20px auto 0
			background #fff

	p
		margin 0
		font-size 18px

/* `HOME
----------------------------------------------------------------------------- */
.home
	position relative
	width 100%
	min-height auto
	background-position center
	background-image url('../images/bg.jpg')
	text-align center
	color white
	background-cover()

	.content-home
		center(800px)

	.btn
		margin-top 50px

	p
		font-size 24px

	h2
		font-weight 800
		margin 50px 0 20px
		text-transform uppercase

		&:after
			content ''
			display block
			width 60px
			height 3px
			margin 30px auto 0
			background #ee4b28


/* `Sobre mim
----------------------------------------------------------------------------- */
.sobre-mim
	background #EB6A5A

	.content-sobre
		center(800px)
		color #fff
		text-align center


/* `Contato
----------------------------------------------------------------------------- */
.contato
	background #fff

	.content-contato
		center(800px)
		color #000
		text-align center

	h3
		&:after
			background #ee4b28

	.social-icons
		cf()
		margin 30px 0 20px

		li
			margin 0 2px
			display inline-block
		a
			display block
			color #000
			width 40px
			height 40px
			padding 9px 0
			text-align center
			border-radius 50%
			border 1px solid #000
			transition-all()

			&:hover
				color #fff
				background #ee4b28
				border 1px solid #ee4b28

	.contato-fone-email
		a
			display inline-block
			color #ee4b28
			margin-bottom 5px
			font-size 22px


/* `Portf√≥lio
----------------------------------------------------------------------------- */
.portfolio
	padding-bottom 0

	h3
		&:after
			background #ee4b28

	.list-jobs
		cf()
		margin-top 60px

		li
			position relative
			column(1/3, cycle: 3, gutter: 0)

			a
				display block

				&:hover
					.info-job
						opacity 1

			.info-job
				bottom 0
				opacity 0
				width 100%
				height 100%
				display block
				position absolute
				background rgba(0, 0, 0, 0.80)
				transition-all()

				.box--info-job
					top 50%
					width 100%
					display block
					text-align center
					position absolute
					transform translateY(-50%)

				.nome-job,
				.tecnologia-job
					color #fff
					display block
					text-align center
					padding 0 10px
					line-height 1.5em
					sans-serif-font()

				.nome-job
					font-size 24px
					margin-bottom 10px

