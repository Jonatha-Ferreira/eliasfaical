.container
	center(1000px)
	padding-left 20px
	padding-right 20px


/* Header Single
-------------------------------------------------------- */
.header-single
	width 100%
	min-height 300px
	padding 4% 2%
	background-size cover
	background-position center
	background-repeat no-repeat
	background-image url('../images/background-single.jpg')

	h1
		color $white
		font-size 2.5em
		line-height 1.2em
		margin 0 20px
		text-align center
		text-transform uppercase
		font-proxima-nova-bold()


/* Content main
-------------------------------------------------------- */
.content-main-single
	padding 0 20px 100px


/* Section revolution
-------------------------------------------------------- */
.section-start-revolution
	center(900px)
	margin-bottom 50px
	padding-top 30px
	padding-right 35px
	text-align right
	border 2px solid $yellow
	
	.span-1
		span(2/4)
	.span-2
		span(2/4)
	
	.btn
		margin 0 auto 20px

	h3, p
		color $white
		
	h3
		margin-top 50px
		text-transform uppercase
		font-proxima-nova-bold()


/* Section Collect
-------------------------------------------------------- */
.section-setup,
.section-collect
	padding 50px 0 0
	text-align center
	
	h3, p, li
		color $white
	
	h3
		margin-bottom 20px
		text-transform uppercase
		font-proxima-nova-bold()
	
	.list-collect
		display none


/* Section Setup
-------------------------------------------------------- */
.section-setup
	cf()
	text-align left
	margin-bottom 50px
	
	.span-1
		column(1/2)
	.span-2
		column(1/2)
	
	li
		margin-bottom 5px
		font-proxima-nova-light()
		
		&:before
			content ''
			width 20px
			height 20px
			margin-right 10px
			vertical-align top
			display inline-block
			background url('../images/sprite.png') no-repeat left -117px


/* Section Princing
-------------------------------------------------------- */
.section-pricing
	margin-top 100px
	position relative
	text-align center
	border 2px solid $yellow
	
	.btn
		display table
		margin 0 auto
		bottom -28px
		position relative
	
	h4, p
		color $yellow
		font-proxima-nova-condensed-light()
	
	p
		width 350px
		font-size 1.4em
		margin 0 auto 20px

	h4
		margin-bottom 30px
		text-transform uppercase
	
	h3
		top -23px
		color $white
		text-transform uppercase
		font-proxima-nova-bold()
		position relative;
		background #0e0d1f
		display inline-block
		padding 5px 20px
		margin-bottom 20px
	
	strong
		font-proxima-nova-condensed-bold()
