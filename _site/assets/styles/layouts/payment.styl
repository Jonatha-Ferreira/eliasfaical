/* -------------------------------------------------------- */
/* Payment
/* -------------------------------------------------------- */
.payment
	min-height 100%
	height 100vh
	position relative
	background-size cover
	background-image url('../images/background-payment.jpg')

	.content-main
		margin 109px 0
		
		.container
			center(480px)
			color $white
			text-align center
			padding-top 40px
			padding-bottom 40px
			padding-left 30px
			padding-right 30px
			background rgba(61, 61, 61, .90)
		
		h2
			text-transform uppercase
			font-size 1.6em
		
		h4
			color $yellow-dark
			display block
			font-size .8em
			margin 20px 0 5px
			text-transform uppercase
			font-proxima-nova-bold()
		
		p
			font-size .8em
			
		.form
			.btn
				border none
				color $white
				width 280px
				margin 30px auto 30px
				background #c1b04e
				
				&:hover
					background $yellow-dark
			
			.box-input
				cf()
				
			.group-form
				column(1/2)
				text-align left
				
					
				.input-date
					width 50px
					text-align center
					margin-right 20px
					vertical-align middle
					display inline-block
				
				.input-security
					width 100px
					vertical-align top
					display inline-block
				
				img
					margin 10px 10px 0
			
			label
				display block
				font-size .8em
				font-proxima-nova-bold()
			
			select,
			input[type="text"]
				display block
				border none
				width 100%
				margin 5px 0 15px
				padding 10px 10px
				background #535252
			
			select
				width 300px
				height 50px
				font-size .8em
				margin 0 auto 40px
				text-align center
	
	// Plugin select2 jQuery
	.select2-container
		margin-bottom 40px
		
		&.select2-container--open
			.select2-selection--single
				background #9c9a9a

	.select2-selection--single
		width 300px
		height 45px
		padding 10px
		border none
		border-radius 0
		background #535252
	
	.select2-selection__rendered
		color $white !important
		font-size .8em
	
	.select2-selection__arrow
		top 10px !important
		right 5px !important
	
	.select2-container--default 
		background #535252
		
		.select2-dropdown
			border none
			border-right 0

		.select2-results__option--highlighted[aria-selected]
			background #c1b04e

		.select2-results__option
			padding 10px
			font-size .8em
			background #9c9a9a
		
		.select2-results__options
			cursor pointer
			padding 0 5px 5px
			background #9c9a9a
