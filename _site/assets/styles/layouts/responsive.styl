/* 768px
-------------------------------------------------------- */
+below(768px)
	.header-single
		min-height auto
		
		h1
			font-size 2em

	.section-start-revolution 
		text-align center
		padding-top 40px
		padding-right 40px
		padding-left 40px
		padding-bottom 0
		
		p
			margin 0
		h3
			margin 0
			
			&:after
				content ''
				display block
				width 80px
				height 2px
				background $yellow
				margin 20px auto 30px
		
		.btn
			margin 0 auto
			position relative
			bottom -27px
		
		.span-1
			display none
		.span-2
			width 100%

	
	//-- Nav
	.nav-hamburger
		display block
	
	.header
		padding 0
		
		.header--nav
			display none

		.open
			display block
			height 100%
			width 100%
			position fixed
			background-color #0a011c
			
			ul
				margin 80px 20px 0
				text-align center
			
			li
				display block
			
			a
				font-size 2.5em
			
	
	//-- HOME
	.section-home 
		height auto
		padding-top 20px
		background #0a011c
		
		.background-video
			display none
		
		.title-site
			text-align left
			margin 0 20px
			max-width 220px
		
		.span-1
			width 100%
			
			img
				margin 30px auto
		
		.text-trainers
			padding 20px 0
			text-align center
			
			h2
				font-size 1.2em
			
			p
				font-size 1em
	
	//-- NUMBER
	.section-number
		padding 50px 20px 20px
		
		p
			font-size 1.4em
		
	.master-footer
		ul
			li
				width 100%
				
				&:first-child
					width 100%
				
				&:last-child
					width 100%
			
			p
				font-size .75em
	
	// section collect
	.section-collect
		#MooFlow
			display none
		
		.list-collect
			cf()
			display block
			
			li
				margin-bottom 20px
				column(1/3, cycle: 3)
	
	// Section Setup
	.section-setup
		text-align center
		
		.span-1
			column(1/1)
		.span-2
			column(1/1)
		
		ul
			width 250px
			margin 0 auto 50px
		li
			text-align left
			margin-bottom 10px


/* 480px
-------------------------------------------------------- */
+below(480px)

	.header-single	
		h1
			font-size 1.6em

	//-- NUMBER
	.section-number
		p
			font-size 1.2em
		
		.span-1
			width 100%


	//-- TOOLS
	.section-tools 
		h2
			font-size 1.4em
		
		h3
			margin 15px 0 5px
			
		.tolls 
			margin-top 30px
			
			.span-1
				width 100%
				margin-bottom 10px
	
	
	//-- Featured In 
	.section-featured-in 
		ul 
			li
				column(2/4, cycle: 2)
			
			img
				margin 15px auto
	

	//-- Section Discover
	.section-discover
		ul
			li
				column(2/2, cycle: 2, gutter: 2)
	
	
	
	//-- Section Collect
	.section-collect
		.list-collect
			li
				column(1/1)
				

	//-- Section Pricing
	.section-pricing 
		margin-top 20
		
		h3
			padding 10px
		p
			width auto
